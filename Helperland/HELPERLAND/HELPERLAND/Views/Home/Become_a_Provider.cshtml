@using HELPERLAND.Models.ViewModels;
@model RegisterViewModel;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bocome_a_Provider</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/css/Home/be_pro.css" asp-append-version="true" />

</head>
<body>
    <section class="bgimg">
        <header id="header">
            <!-- navbar starts -->
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a href="#" class="navbar-brand">
                        <img src="~/imgs/white-logo-transparent-background.png"
                             class="white-logo-transparent-background" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="collapsibleNavbar">
                        <ul class="navbar-nav ms-auto me-2 align-items-center">
                            <li class="nav-item text-center mb-1 ms-1">
                                <a class="nav-link border border-1 rounded-pill ms-1 me-1 bl"
                                   href="#">Book a cleaner</a>
                            </li>
                            <li class="nav-item text-center b mb-1 ms-1">
                                <a class="nav-link " asp-controller="Home" asp-action="Prices">Prices</a>
                            </li>
                            <li class="nav-item text-center b mb-1 ms-1">
                                <a class="nav-link " href="#">Our Guarantee</a>
                            </li>
                            <li class="nav-item text-center b mb-1 ms-1">
                                <a class="nav-link " href="#">Blog</a>
                            </li>
                            <li class="nav-item text-center b mb-1 ms-1">
                                <a class="nav-link " asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                            </li>
                            <li class="nav-item text-center mb-1 ms-1">
                                <a class="nav-link border border-1 rounded-pill ms-1 me-1 bl"
                                   asp-controller="home" asp-action="index" asp-route-loginPopUp=true>Login</a>
                            </li>
                            <li class="nav-item text-center mb-1 ms-1">
                                <a class="nav-link border border-1 rounded-pill ms-1 me-1 bl"
                                   href="#">Become a Helper</a>
                            </li>
                            <li class="btn-group dropstart ms-1">
                                <button class="btn btn-secondary data-toggle"
                                        type="button"
                                        id="dropdownMenuButton1"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <img id="flagImage"
                                         src="~/imgs/india.svg"
                                         alt="" />
                                    <img id="ddIcon"
                                         src="~/imgs/forma-1.png"
                                         style="transform:rotate(180deg)!important;"
                                         alt="" />
                                </button>
                                <ul class="dropdown-menu mt-5"
                                    aria-labelledby="dropdownMenuButton1">
                                    <li>
                                        <a class="dropdown-item">
                                            <img src="~/imgs/india.svg" alt="" />
                                            India
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <img src="~/imgs/australia.svg" alt="" />
                                            Australia
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>




        <div class="d-flex flex-column align-items-center">
            <div class="registration-form d-flex flex-column align-items-center text-center">
                <h4>Register Now!</h4>
                <form method="post">
                    <div>
                        <input type="text" placeholder="First Name" asp-for="FirstName" class="i1" />
                    </div>
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    <div>
                        <input type="text" placeholder="Last Name" asp-for="LastName" class="i1" />
                       </div>
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    <div>
                        <input type="email" placeholder="E-mail" asp-for="Email" class="i1" />
                    </div>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })


                    <div class="d-flex justify-content-center" id="de">
                        <span>+91</span>
                        <input type="number" placeholder="Mobile Number" asp-for="Mobile" />
                    </div>
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })

                    <div>
                        <input type="password" placeholder="Password" asp-for="Password" class="i1" />
                    </div>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    <div>
                        <input type="password" placeholder="Confirm Password" asp-for="ConfirmPassword" class="i1" />
                    </div>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    <div class="check">
                        <input type="checkbox"  id="check"/>
                        <label for="flexCheckDefault1">I accept <span>terms and conditions</span> & <span>privacy policy</span></label>
                    </div>

                    @Html.Raw(@ViewBag.Alert)
                    <div class="d-flex justify-content-center">
                        
                            <input class="btn px-4"
                                   type="submit"
                                   id="gs"
                                   value="Get Started"/>
                        
                    </div>
                </form>
            </div>
            <div>
                <a href="#n">
                    <img src="~/imgs/shape-1.png" class="shape1" />
                </a>
            </div>
        </div>

    </section>


    <section>
        <main>
            <div class="d-flex justify-content-center">
                <img class="blogleft" src="~/imgs/blog-left-bg.png" alt="" srcset="" />
                <img class="blogright" src="~/imgs/blog-right-bg.png" alt="" srcset="" />
                <h2 id="n">How It Works</h2>
            </div>
            <div class="items-container">
                <div class="d-flex align-items-center justify-content-center flex-wrap my-5">
                    <div class="flex-wrap">
                        <h6 class="ry">Register Yourself</h6>
                        <p class="ryp">Provide your basic information to register yourself as a service provider.</p>
                        <span>Read more <img src="~/imgs/shape-2.png" alt="" /></span>
                    </div>
                    <div>
                        <img src="~/imgs/group-18 b.png" class="group-18b" />
                    </div>
                </div>

                <div class="d-flex align-items-center justify-content-center flex-wrap my-5">
                    <div id="order2">
                        <img src="~/imgs/group-29.jpg" class="group-29" />
                    </div>
                    <div class="flex-wrap" id="order1">
                        <h6 class="ry">Get service requests</h6>
                        <p class="ryp">You will get service requests frm customers depend on service area and profile.</p>
                        <span>Read more <img src="~/imgs/shape-2.png" alt="" /></span>
                    </div>
                </div>

                <div class="d-flex align-items-center justify-content-center flex-wrap my-5">
                    <div class="flex-wrap">
                        <h6 class="ry">Complete service</h6>
                        <p class="ryp">Accept service request from your customers and complete your work.</p>
                        <span>Read more <img src="~/imgs/shape-2.png" alt="" /></span>
                    </div>
                    <div>
                        <img src="~/imgs/group-30.jpg" class="group-30" />
                    </div>
                </div>
            </div>
        </main>
    </section>
    <!-- news letter with mail and submit button starts -->

    <div class="text-center mt-4">
        <h3>GET OUR NEWSLETTER</h3>
        <div class="d-flex justify-content-center flex-wrap mt-2">
            <input id="mail" type="email" placeholder="YOUR E-MAIL" class="rounded-pill align-items-left ps-3 py-2 my-2" />
            <button id="submit" type="submit" class="rounded-pill align-items-center px-4 py-1 mx-2 my-2">Submit</button>
        </div>
    </div>


    <!-- news letter with mail and submit button end -->
    <!-- footer starts -->
    <footer>
        <div class="mt-5" style="background: #111111;">
            <div class="container d-flex justify-content-between align-items-center flex-wrap py-4">
                <div>
                    <a href="#"><img src="~/imgs/white-logo-transparent-background.png" class="white-logo-transparent-background" /></a>
                </div>

                <nav class="nav mx-5">
                    <ul class="nav mx-5">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="AboutUs" class="nav-link">ABOUT</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">TESIMONIALS</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="FAQs" class="nav-link">FAQs</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">INSURANCE POLICY</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">IMPRESSUM</a>
                        </li>
                    </ul>
                </nav>

                <!-- logo of instagram and facebook -->
                <div class="mx-4">
                    <a class="px-2" href="#" style="color: #ffffff;"><i class="fa fa-facebook-f"></i></a>
                    <a class="px-2" href="#" style="color: #ffffff;"><i class="fa fa-instagram"></i></a>
                </div>
            </div>


            <!-- line -->

            <div class="d-flex justify-content-center">
                <hr />
            </div>

            <!-- line done -->
            <!-- privacy content -->
            <div class="text-center mb-0 py-3">
                <h6 class="mb-0 py-2 d-inline">
                    ©2018 Helperland. All rights reserved.&emsp; Terms and Conditions
                    <a href="#">|  Privacy Policy</a>
                </h6>
            </div>
        </div>

    </footer>
    <!-- footer end -->



    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/Home/be_pro.js" asp-append-version="true"></script>
</body>
</html>