@using HELPERLAND.Models.ViewModels
@model ContactUsViewModel

@{
    ViewData["Title"] = "Contact_Us";
}
@{
    Layout = "~/Views/Home/Layout.cshtml";
}
@section AddHead{
    <link rel="stylesheet" href="~/css/Home/contact.css" asp-append-version="true" />
}

<!-- image -->
<img src="~/imgs/group-1.png" class="group-1" />


<!-- center heading -->
<h1 class="d-flex justify-content-center" id="contus">Contact Us</h1>
<div class="d-flex justify-content-center">
    <hr />
    <img src="~/imgs/forma-1-copy-5.png" class="forma-1-copy-5" />
    <hr class="hr2" />
</div>


<!-- logos for the contact -->
<div class="container flex-wrap mt-5">
    <div class="row row-col-3">
        <div class="col text-center">
            <img src="~/imgs/location.png" />
            <p style="color: #4f4f4f; font-size: 16px;"><br>1111 Lorem ipsum text 100,<br>Lorem ipsum AB</p>
        </div>
        <div class="col text-center">
            <img src="~/imgs/phone-call.png" />
            <p style="color: #4f4f4f;"><br>+49(40)-123-56-7890<br>+49(40)-987-56-0000</p>
        </div>
        <div class="col text-center">
            <img src="~/imgs/mail.png" class="imgmail" />
            <p style="color: #4f4f4f;"><br>info@helperland.com</p>
        </div>
    </div>
</div>

<!-- contact end -->
<!-- line -->
<div class="container d-flex justify-content-center">
    <hr class="line" />
</div>
<!-- line end -->
<!-- get in touch with the form starts-->

<section>
    <div class="container justify-content-center" style="flex-wrap: wrap;">
        <div class="mt-3">
            <h2>Get in touch with us</h2>
        </div>
    </div>

    <div class="container justify-content-center form">
        <form method="post">
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <input type="text"
                           class="form-control"
                           id="first-name"
                           placeholder="First Name"
                           asp-for="FirstName" />
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6 mb-3">
                    <input type="text"
                           class="form-control"
                           id="last-name"
                           placeholder="Last Name"
                           asp-for="LastName" />
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <!--Email-->
                <div class="form-group col-md-6 mb-3">
                    <input type="text"
                           class="form-control"
                           id="email"
                           placeholder="Email address"
                           asp-for="Email" />
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <!--Mobile Number-->
                <div class="col-md-6 mb-3">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">+91</span>
                        <input type="number"
                               class="form-control"
                               id="mobile-number"
                               placeholder="Mobile Number"
                               asp-for="Mobile" />
                    </div>
                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 mb-3">
                    <div class="form-group selectbox">
                        @Html.DropDownListFor(model => model.Subject, new List<SelectListItem>
                            { new SelectListItem{Text="General", Value="General"},
                              new SelectListItem{Text="inquiry", Value="inquiry"},
                              new SelectListItem{Text="renewal",Value="renewal"},
                              new SelectListItem{Text="revocation",Value="revocation"}})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 mb-3">
                    <div class="form-group">
                        <textarea class="form-control"
                                  id="message"
                                  rows="5"
                                  placeholder="Message"
                                  asp-for="Message"></textarea>
                    </div>
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 mb-3">
                    <div class="form-group">
                        <label class="control-label mb-3" for="fileUpload">
                            Attach the attachment
                        </label>

                        <input id="fileUpload" asp-for="File" hidden />
                        <label for="fileUpload" id="forFileUpload">Upload</label>
                        <span id="file-chosen"></span>
                        @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            @Html.Raw(@ViewBag.Alert)
            <div class="row mb-3">
                <div class="col-md-12 text-center">
                    <input class="btn px-4"
                           type="submit"
                           id="regis"
                           value="Submit" />
                </div>
            </div>
        </form>
    </div>
</section>
<!-- get in touch with the form ends-->
<!-- map -->
<div>
    <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3773.83146053615!2d72.8235753145849!3d18.938852787166763!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7d1e0f0a26a81%3A0x87d6e47e04df3916!2sWankhede%20Stadium%20Mumbai!5e0!3m2!1sen!2sin!4v1638267492310!5m2!1sen!2sin" height="400" style="border:0;" width="100%" loading="lazy"></iframe>
</div>

@section AddFooter{
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/Home/contact.js" asp-append-version="true"></script>
}