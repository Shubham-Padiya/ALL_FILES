@using HELPERLAND.Models.Data
@model IEnumerable<UserAddress>
@{
    Layout = null;
}
<!--table start-->
@if (Model.Count() > 0)
{
    <table id="table_id" class="table table-borderless">
        <thead>
            <tr>
                <th scope="col">Addresses</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in Model)
            {
                <tr>
                    <td>
                        <b>Address: </b>@address.AddressLine1,@address.AddressLine2 @address.City-@address.State @address.PostalCode<br /><b>Phone number:</b> @address.Mobile
                    </td>
                    <td>
                        <div class="d-flex justify-content-end">
                            <a data-id=@address.AddressId class="editBtn"><img src="~/imgs/edit-icon.png" /></a>
                            <a data-id=@address.AddressId class="deleteBtn"><img class="ms-2" src="~/imgs/delete-icon.png" /></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<button class="btn" id="newAddress" onclick="newAddress()">Add New Address</button>
