@{
    var isError = ViewBag.IsError;
    var resultMessage = ViewBag.ResultMessage;
    var serviceRequestId = ViewBag.ServiceRequestId;
}

<form id="paymentform" data-ajax="true" data-ajax-url="/bookservice/MakePayment"
      data-ajax-method="post" data-ajax-update="#payment">

    <h5>Pay securely with Helperland payment gateway!</h5>
    <label for="Promo">Promo code (optional)</label> <br />
    <input type="text"
           placeholder="Promo code (optional)"
           class="promo" />
    <button type="submit" class="apply">Apply</button>
    <hr />

    <div class="d-flex align-items-center mb-3"
         id="card-detail-div">
        <div class="d-flex align-items-center">
            <i class="fa fa-credit-card"></i>
            <input type="text"
                   maxlength="16"
                   class="form-control ms-1"
                   id="card-number"
                   placeholder="Card number" />
        </div>

        <div class="d-flex ms-auto">
            <input type="text"
                   class="form-control"
                   id="card-expiry"
                   placeholder="MM/YY" />
            <input type="text"
                   maxlength="3"
                   class="form-control"
                   id="card-cvc"
                   placeholder="CVC" />
        </div>
    </div>

    <div class="d-flex">
        <input type="checkbox" id="check" class="condition" />
        <p>
            I accepted terms and conditions, the cancellation policy and
            the privacy policy. I confirm that Helperland starts to
            execute the contract before the expiry of the withdrawal
            period and I lose my right of withdrawal as a consumer with
            full performance of the contract.
        </p>
    </div>
    <hr />
    <div class="d-flex justify-content-end">
        <button class="booking" id="completebooking" onclick="SubmitPayment()">Complete Booking</button>
    </div>

</form>

<script>
  var isError = "@ViewBag.isError";
  var resultMessage = "@ViewBag.resultMessage";
    var serviceRequestId = "@ViewBag.serviceRequestId";

    $('document').ready(function () {
        $('#check').change(function () {
            $('#completebooking').prop("disabled", !this.checked);
        }).change()
    });
</script>