@using HELPERLAND.Models.ViewModels
@{
    ViewData["Title"] = "Book Service";
    Layout = "~/Views/Home/Layout.cshtml";
    SchedualViewModel model = new SchedualViewModel();
    model.ServiceDate = DateTime.Today;
}
@section AddHead{
    <link rel="stylesheet" href="~/css/Home/BookService.css" asp-append-version="true">
}
<script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>


<img src="~/imgs/book-service.jpg" class="book-service" />

<div class="modal fade"
     tab-index="-1"
     id="resultModal"
     role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                        onclick="hideModal()"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column align-items-center">
                    <img id="resultImage" src="~/imgs/greenright.png" />
                    <h5 id="resultMessage"></h5>
                    <p id="serviceRequestId"></p>
                    <button id="okBtn" onclick="hideModal()">Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="setup">
    <h1>Set up your cleaning service</h1>
    <div class="d-flex justify-content-center">
        <hr />
        <img src="~/imgs/forma-1-copy-5.png" class="forma-1-copy-5" />
        <hr />
    </div>
    <!-- form -->
    <div class="container-fluid justify-content-center my-5 form">
        <div class="d-flex justify-content-center maincontent">
            <div class="me-4 navtabs align-items-center">
                <!--  -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active-tab"
                           data-bs-toggle="tab"
                           href="#setup" id="setuptab">
                            <img src="~/imgs/setup-service-white.png" /><span>
                                Setup Services
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" data-bs-toggle="tab" href="#schedual"
                           id="schedualtab">
                            <img src="~/imgs/schedule-plan.png" /><span>
                                Schedule & Plan
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" data-bs-toggle="tab"
                           href="#urdetail" id="detailtab">
                            <img src="~/imgs/details.png" /><span>
                                Your Details
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" data-bs-toggle="tab"
                           href="#payment" id="paymenttab">
                            <img src="~/imgs/make-payment.png" /><span>
                                Make Payment
                            </span>
                        </a>
                    </li>
                </ul>
                <!--  -->
                <div class="tab-content">
                    <!-- setup content -->
                    <div class="tab-pane active" id="setup">
                        <partial name="ZipCode" />
                    </div>
                    <!-- schedual content -->
                    <div class="tab-pane fade" id="schedual">
                        <partial name="Schedual" />
                    </div>
                    <!-- ur details -->
                    <div class="tab-pane fade" id="urdetail"></div>
                    <!-- payment -->
                    <div class="tab-pane fade" id="payment">
                        <partial name="MakePayment" />
                    </div>

                </div>
            </div>

            <!--  -->
            <!-- button -->
            <!-- <button class="paymentbutton">Payment Summary</button> -->
            <!--  -->
            <!--  -->
            <!-- payment summary starts -->
            <div class="ms-4" id="paymentsummary">
                <div class="shadow">
                    <div class="psumm">
                        <div class="hrs">
                            <h3 class="px-3 py-3 mb-3">Payment Summary</h3>
                            <div class="d-flex px-3">
                                <span id="service-date"></span>
                                <span class="ms-1" id="service-time"></span>
                            </div>
                            <span class="px-3">Duration</span>
                            <div class="d-flex justify-content-between px-3">
                                <span>Basic</span>
                                <span>3 Hrs</span>
                            </div>
                            <div class="d-flex px-3">
                                <label><b>Extra</b></label>
                            </div>
                            <div class="" id="extra-services">
                                <div class="d-flex justify-content-between px-3"></div>

                                <div class="d-flex justify-content-between px-3"></div>

                                <div class="d-flex justify-content-between px-3"></div>

                                <div class="d-flex justify-content-between px-3"></div>

                                <div class="d-flex justify-content-between px-3"></div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <hr />
                            </div>
                            <div class="d-flex justify-content-between px-3">
                                <h5>Total Service Time</h5>
                                <h5><span id="totaltime">3</span> Hrs</h5>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between px-3 pt-3 cleaning">
                            <span>Per cleaning</span>
                            <span id="perCleaning">0.00 &euro;</span>
                        </div>
                        <div class="d-flex justify-content-between px-3 pt-3 price">
                            <span class="text">Total Payment</span>
                            <span class="euro" id="totalpayment">0.00 &euro;</i></span>
                        </div>
                        <div class="px-3">
                            According to § 19 UStG no sales tax is calculated.
                        </div>
                        <div class="d-flex justify-content-between px-3 pt-3">
                            <span>Effective Price</span>
                            <span class="euro">0.00 <i class="fa fa-euro"></i></span>
                        </div>
                        <div class="px-3 pt-1">
                            <span class="star"> * </span>You will save 20% according to
                            §35a EStG.
                        </div>
                        <div class="px-3 mt-3 emoji py-2">
                            <span>&#128578; </span>See what is always included
                        </div>
                    </div>
                </div>
                <!-- payment summary end -->
                <!-- questions -->
                <div class="questions mt-3">
                    <p class="text-center">Questions?</p>
                    <!-- question 1 -->
                    <div class="accordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapseOne"
                                        aria-expanded="true"
                                        aria-controls="collapseOne">
                                    What's included in a cleaning?
                                </button>
                            </h2>
                            <div id="collapseOne"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="headingOne">
                                <div class="accordion-body">
                                    Bedroom, Living Room & Common<br />
                                    Areas,Bathrooms,Kitchen,Extras
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- question 2 -->
                    <div class="accordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingtwo">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapsetwo"
                                        aria-expanded="true"
                                        aria-controls="collapseOne">
                                    Which Helperland professional will come to my place?
                                </button>
                            </h2>
                            <div id="collapsetwo"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="headingOne">
                                <div class="accordion-body">
                                    Helperland has a vast network of experienced, top-rated
                                    <br />
                                    cleaners. Based on the time and date of your request, we
                                    <br />
                                    work to assign the best professional available.Like <br />
                                    working with a specific pro? Add them to your Pro Team
                                    <br />
                                    from the mobile app and they'll be requested first for all
                                    <br />
                                    future bookings.You will receive an email with details
                                    <br />
                                    about your professional prior to your appointment.
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- question 3 -->
                    <div class="accordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingthree">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapsethree"
                                        aria-expanded="true"
                                        aria-controls="collapsethree">
                                    Can I skip or reschedule bookings?
                                </button>
                            </h2>
                            <div id="collapsethree"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="headingthree">
                                <div class="accordion-body">
                                    Helperland has a vast network of experienced, top-rated
                                    <br />
                                    cleaners. Based on the time and date of your request, we
                                    <br />
                                    work to assign the best professional available.Like <br />
                                    working with a specific pro? Add them to your Pro Team
                                    <br />
                                    from the mobile app and they'll be requested first for all
                                    <br />
                                    future bookings.You will receive an email with details
                                    <br />
                                    about your professional prior to your appointment.
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- question 4 -->
                    <div class="accordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading4">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapse4"
                                        aria-expanded="true"
                                        aria-controls="collapse4">
                                    Test Tatva
                                </button>
                            </h2>
                            <div id="collapse4"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="headingOne">
                                <div class="accordion-body">Test Tatva</div>
                            </div>
                        </div>
                    </div>
                    <!-- complete question -->
                    <div class="mt-3">
                        <a href="FAQs.html" class="morehelp">For More Help</a>
                    </div>
                </div>
            </div>
            <!-- payment summary ends -->
        </div>
    </div>
</section>
@section AddFooter{
    <script src="~/js/Home/BookService.js" asp-append-version="true"></script>
    <script>
        $(".getnews").hide();
    </script>
}